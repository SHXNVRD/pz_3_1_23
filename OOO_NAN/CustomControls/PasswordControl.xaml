<UserControl x:Class="OOO_NAN.CustomControls.PasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:OOO_NAN.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="255">

    <PasswordBox x:Name="PasswordBox"
                 PasswordChanged="OnPasswordChanged"
                 Padding="0 5"
                 md:HintAssist.Hint="Пароль"
                 Style="{StaticResource MaterialDesignFilledRevealPasswordBox}"/>
</UserControl>
