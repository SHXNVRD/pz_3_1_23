<Window x:Class="pz_3_1_23.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_3_1_23"
        mc:Ignorable="d"
        Title="Autorization" Height="250" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="LoginBox" Width="200" Margin="0 10"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0 10"/>
            <Button Content="Войти" Click="LoginButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
